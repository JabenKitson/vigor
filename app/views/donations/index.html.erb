<h1>Listing donations</h1>

<table>
  <tr>
    <th>Contact</th>
    <th>Date</th>
    <th>New member</th>
    <th>Renewal</th>
    <th>Comments</th>
    <th>Earmark</th>
  </tr>

<% for donation in @donations %>
  <tr>
    <td><%=h donation.contact_id %></td>
    <td><%=h donation.date %></td>
    <td><%=h donation.new_member %></td>
    <td><%=h donation.renewal %></td>
    <td><%=h donation.comments %></td>
    <td><%=h donation.earmark %></td>
    <td><%= link_to 'Show', donation %></td>
    <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
    <td><%= link_to 'Destroy', donation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

