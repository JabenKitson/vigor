<% @review = object %>
<%= simple_form_for(@review) do |builder|%>
    <div class="form-inputs">
    <p><%= builder.label :title %>
    <%= builder.text_field :title%></p>
    <%= builder.input :rating, :collection => ['1','2','3','4','5'], :prompt => 'How many stars?' %></p>

    <p>    <%= builder.input :body, :size => "12X108" %>
    </p>

       </div>
   <div class="form-actions">
    <%= builder.submit "Post" %>
  </div>
<% end %>
