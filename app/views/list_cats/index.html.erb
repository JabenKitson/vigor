<h1>Lists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for list_cat in @list_cats %>
  <tr>
    <td><%=h list_cat.name %></td>
    <td><%=h list_cat.description %></td>
    <td><%= link_to 'Show', list_cat %></td>
    <td><%= link_to 'Edit', edit_list_cat_path(list_cat) %></td>
    <td><%= link_to 'Destroy', list_cat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

